<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@mipmap/ic_launcher"
                >
            </ImageView>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select the platform you like: "
                app:layout_constraintTop_toBottomOf="@id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="30dp"
                >

            </TextView>
            <RadioGroup
                android:id="@+id/rg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt1"
                app:layout_constraintLeft_toLeftOf="parent"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Iphone">

                </CheckBox>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android"
                    android:checked="true"
                    ></CheckBox>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Window Mobile"
                    ></CheckBox>
            </RadioGroup>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                app:layout_constraintTop_toBottomOf="@id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="30dp"
                />
            <RadioGroup
                android:id="@+id/rg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"

                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male">

                </RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"

                    ></RadioButton>

            </RadioGroup>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate your girl/guy in love with you:"
                app:layout_constraintTop_toBottomOf="@id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20dp"
                />
            <RatingBar
                android:id="@+id/rts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:rating="3"
                ></RatingBar>
            <TextView
                android:id="@+id/txt3"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You country:"
                app:layout_constraintTop_toBottomOf="@id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20dp"
                />

            <Spinner
                android:spinnerMode="dropdown"
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt3"
                app:layout_constraintLeft_toLeftOf="parent"
                ></Spinner>

            <TextView
                android:id="@+id/txt4"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your university:"
                app:layout_constraintTop_toBottomOf="@id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20dp"
                />

            <Spinner
                android:id="@+id/spinner2"
                android:spinnerMode="dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spinner1"
                app:layout_constraintLeft_toLeftOf="parent"
                ></Spinner>

            <TextView
                android:id="@+id/txt5"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your favourite:"
                app:layout_constraintTop_toBottomOf="@id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20dp"
                />

            <RadioGroup
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt1"
                app:layout_constraintLeft_toLeftOf="parent">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tennis"
                    android:checked="true">

                </CheckBox>

                <CheckBox

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running"

                    ></CheckBox>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swimming"
                    android:checked="true"
                    ></CheckBox>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleeping"

                    ></CheckBox>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reading"

                    ></CheckBox>

            </RadioGroup>

            <Button
                android:id="@+id/btnSubmit"
                android:onClick="NopBai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/radio2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Submit"
                android:width="350dp"
                android:background="#28423E3E"
                android:layout_marginLeft="20dp"
                ></Button>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>